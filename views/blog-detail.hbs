<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog-detail</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/css/sidebar.css" />
    <style>
      .active { color: orangered !important; font-weight: bold !important; }
    </style>
  </head>
  <body>
    <!-- NAV -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/Day 10/index.html">
          <img
            src="/assets/picture/logo-dumbways.png"
            style="width: 50px"
            alt="image here"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link active" href="/blog">Blog</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>

          {{#if user}}
            <h3 style="margin-right: 30px; color:orangered">Hello,
              {{user.name}}</h3>
            <a
              style="margin-right: 10px;"
              href="/logout"
              class="btn btn-outline-danger"
            >Logout</a>
          {{else}}
            <a
              style="margin-right: 10px;"
              href="/register"
              class="btn btn-outline-warning"
            >Register</a>
            <a
              style="margin-right: 10px;"
              href="/login"
              class="btn btn-outline-warning"
            >Login</a>
          {{/if}}

          <a href="/contact" class="btn btn-outline-dark">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- NAV -->

    <!-- CARD -->

    {{! ========================================== }}

    <div class="container">
      <section>
        <h1>{{data.title}}</h1>
        <br />
        <div class="con-text">
          <img src="{{data.image}}" alt="default.jpg" />
          <div>
            <h5>Duration</h5>
            <h5 style="color: gray;">{{data.startdate}} | {{data.enddate}}</h5>
            <h5 style="color: gray;">{{data.duration}}</h5>
            <br />
            <h5>Technologies</h5>
            <h5 style="color: gray;">{{data.technologies}}</h5>
          </div>
        </div>
        <br />
        <div>
          <p>
            {{data.content}}
          </p>
        </div>
      </section>

      <aside>
        {{#each allBlogs}}
          <div
            class="card"
            style="
            background-image: url('{{image}}');
          "
          >
            <a href="/blog-detail/{{id}}">
              <div class="card-text">
                {{title}}
              </div>
            </a>
          </div>
        {{/each}}
      </aside>

    </div>

    <!-- CARD -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>