<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <!-- <link rel="stylesheet" href="/assets/css/navbar.css" /> -->
    <link rel="stylesheet" href="/assets/css/blog.css" />
    <link rel="stylesheet" href="/assets/css/post-grid.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .active { color: orangered !important; font-weight: bold !important; }
    </style>
  </head>
  <body>
    <!-- NAV -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img
            src="/assets/picture/logo-dumbways.png"
            style="width: 50px"
            alt="image here"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link active" href="blog">Add Project</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="testimonial">Testimonial</a>
            </li>
          </ul>

          {{#if user}}
            <h3 style="margin-right: 30px; color:orangered">Hello,
              {{user.name}}</h3>
            <a
              style="margin-right: 10px;"
              href="/logout"
              class="btn btn-outline-danger"
            >Logout</a>
          {{else}}
            <a
              style="margin-right: 10px;"
              href="/register"
              class="btn btn-outline-warning"
            >Register</a>
            <a
              style="margin-right: 10px;"
              href="/login"
              class="btn btn-outline-warning"
            >Login</a>
          {{/if}}

          <a href="contact" class="btn btn-outline-dark">Contact Me</a>
        </div>
      </div>
    </nav>

    <!-- NAV -->
    <div class="project-title">
      <br />
      <h1>MY PROJECT</h1>
      {{#if user}}
        <div>
          <a href="add-blog" type="button" class="btn btn-warning">Add My
            Project</a>
        </div>
      {{/if}}
    </div>

    {{#if error}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{error}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}
    <!-- NAV -->

    {{! Tampilkan pesan error jika ada }}
    {{#if error}}
      <div class="alert alert-danger" role="alert">
        {{error}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}

    {{! Tampilkan pesan sukses jika ada }}
    {{#if success}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{success}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}

    <!-- CONTENT -->
    <section class="grid-container">

      {{#if user}}
        {{#each data}}
          <div class="grid-item">
            <div>
              <img src="{{image}}" alt="ini gambar rusak" />
              <a href="/blog-detail/{{id}}"><h3>{{title}}</h3></a>
              <h4 class="content-text1">{{startDate}}
                -
                {{endDate}}
                |
                {{this.user.name}}<br />{{duration}}</h4>
              <div class="card-text1">
                {{content}}
              </div>
              <p class="content-text3">{{technologies}}</p>
            </div>

            <div class="post-btn">
              <div>
                <a
                  href="/edit-blog/{{id}}"
                  type="button"
                  class="btn btn-success"
                >edit</a>
              </div>
              <div>
                <a
                  href="/delete-blog/{{id}}"
                  type="button"
                  class="btn btn-danger"
                >delete</a>
              </div>
            </div>
          </div>
        {{/each}}

      {{else}}
        {{#each data}}
          <div class="grid-item">
            <div>
              <img src="{{image}}" alt="ini gambar rusak" />
              <a href="/blog-detail/{{id}}"><h3>{{title}}</h3></a>
              <h4 class="content-text1">{{startDate}}
                -
                {{endDate}}<br />{{duration}}</h4>
              <div class="card-text1">
                {{content}}
              </div>
              <p class="content-text3">{{technologies}}</p>
            </div>

            <a
              href="/blog-detail/{{id}}"
              type="button"
              class="btn btn-primary"
            >view</a>
          </div>
        {{/each}}
      {{/if}}

      {{#if user}}
        <div class="grid-item2">
          <a href="add-blog">
            <img
              href="add-blog"
              class="plus-img"
              src="https://static.vecteezy.com/system/resources/previews/011/912/003/non_2x/plus-sign-icon-free-png.png"
              alt="Plus"
            />
          </a>
        </div>
      {{/if}}

    </section>

    <!-- CONTENT -->

    <div>
      <i class="fa-brands fa-node-js" style="display: none"></i>
      <i class="fa-brands fa-react" style="display: none"></i>
      <i class="fa-solid fa-n" style="display: none"></i>
      <i class="fa-solid fa-quote-right" style="display: none"></i>
    </div>

    <script src="/assets/js/blog.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>