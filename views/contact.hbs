<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Me</title>
    <!-- <link rel="stylesheet" href="/assets/css/navbar.css" /> -->
    <link rel="stylesheet" href="/assets/css/contact.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .active { color: orangered !important; font-weight: bold !important; }
    </style>
  </head>
  <body>
    <!-- NAV -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/Day 10/index">
          <img
            src="/assets/picture/logo-dumbways.png"
            style="width: 50px"
            alt="image here"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="blog">Add Project</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="testimonial">Testimonial</a>
            </li>
          </ul>

          {{#if user}}
            <h3 style="margin-right: 30px; color:orangered">Hello,
              {{user.name}}</h3>
            <a
              style="margin-right: 10px;"
              href="/logout"
              class="btn btn-outline-danger"
            >Logout</a>
          {{else}}
            <a
              style="margin-right: 10px;"
              href="/register"
              class="btn btn-outline-warning"
            >Register</a>
            <a
              style="margin-right: 10px;"
              href="/login"
              class="btn btn-outline-warning"
            >Login</a>
          {{/if}}

          <a href="contact" class="btn btn-dark">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- NAV -->

    <!-- FROM -->
    <div class="form-container1">
      <h1>GET IN TOUCH</h1>
      <br />

      <form onsubmit="sendEmail(event)" id="myForm">
        <div class="blog-name">
          <label for=""> Name </label>
          <input
            class="blog-input"
            id="inputname"
            placeholder="Enter your name..."
          />
        </div>

        <div class="blog-email">
          <label for=""> Email </label>
          <input
            class="blog-input"
            id="inputemail"
            placeholder="Enter your email..."
          />
        </div>

        <div class="blog-number">
          <label for=""> Phone Number </label>
          <input
            class="blog-input"
            id="inputnumber"
            placeholder="Enter your phone number..."
          />
        </div>

        <div class="blog-option">
          <label for=""> Subject </label>
          <select class="blog-input" id="subject">
            <option value="" disabled selected>Select an Option</option>
            <option value="Frontend Developer">Frontend Developer</option>
            <option value="Backend Developer">Backend Developer</option>
            <option value="Fullstack Developer">Fullstack Developer</option>
          </select>
        </div>

        <div class="blog-message">
          <label for=""> Your Message </label>
          <textarea class="blog-textarea" rows="4" id="message"></textarea>
        </div>

        <div class="submit-btn-div">
          <input class="submit-btn" type="submit" value="Submit" />
        </div>
      </form>
    </div>
    <!-- FROM -->

    <script src="/assets/js/contact.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>