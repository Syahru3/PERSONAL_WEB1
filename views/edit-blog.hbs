<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Blog</title>
    <!-- <link rel="stylesheet" href="/assets/css/navbar.css" /> -->
    <link rel="stylesheet" href="/assets/css/blog.css" />
    <link rel="stylesheet" href="/assets/css/post-grid.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .active { color: orangered !important; font-weight: bold !important; }
    </style>
  </head>
  <body>
    <!-- NAV -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/Day 10/index.html">
          <img
            src="/assets/picture/logo-dumbways.png"
            style="width: 50px"
            alt="image here"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link active" href="/blog">Blog</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          <a href="/contact" class="btn btn-outline-dark">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- NAV -->

    <!-- FORM -->
    <div class="form-container2">
      <br />
      <h1>EDIT PROJECT</h1>
      <br />

      <form method="post" action="/edit-blog/{{data.id}}">
        <div class="blog-proname">
          <label for=""> Title </label>
          <input
            class="blog-input"
            id="pronameinput"
            placeholder="Enter title here..."
            name="title"
            value="{{data.title}}"
          />
        </div>

        <div class="blog-date-container">
          <div class="blog-startdate">
            <label for="startDate">Start Date:</label>
            <input
              class="blog-input"
              type="date"
              id="startdate"
              name="startdate"
              value="{{data.startdate}}"
            />
          </div>

          <div class="blog-enddate">
            <label for="enddate">End Date:</label>
            <input
              class="blog-input"
              type="date"
              id="enddate"
              name="enddate"
              value="{{data.enddate}}"
            />
          </div>
        </div>

        <div class="blog-description">
          <label for=""> Description </label>
          <textarea
            class="blog-textarea"
            rows="4"
            id="descriptioninput"
            maxlength="200"
            name="content"
          >{{data.content}}</textarea>
        </div>

        <div>
          <div class="blog-technologies">
            <label for=""> Technologies </label>
          </div>
          <div class="blog-checkbox">
            <div>
              <div>
                <input
                  class="blog-box"
                  type="checkbox"
                  id="asus"
                  name="technologies"
                  value="Node JS"
                />
                <label for="asus">Node JS</label>
              </div>
              <div>
                <input
                  class="blog-box"
                  type="checkbox"
                  id="acer"
                  name="technologies"
                  value="React JS"
                />
                <label for="acer">React JS</label>
              </div>
            </div>

            <div>
              <div>
                <input
                  class="blog-box"
                  type="checkbox"
                  id="lenovo"
                  name="technologies"
                  value="Next JS"
                />
                <label for="lenovo">Next JS</label>
              </div>
              <div>
                <input
                  class="blog-box"
                  type="checkbox"
                  id="axioo"
                  name="technologies"
                  value="TypeScript"
                />
                <label for="axioo">TypeScript</label>
              </div>
            </div>
          </div>
        </div>

        <div style="font-weight: bold">
          <label for="image"> Upload Image </label>
          <div class="blog-upload">
            <input
              class="blog-input"
              type="file"
              id="imageinput"
              name="image"
            />
          </div>
        </div>

        <div class="submit-btn-div">
          <button type="submit">Edit Post</button>
        </div>
      </form>
    </div>
    <!-- FORM -->

    <div>
      <i class="fa-brands fa-node-js" style="display: none"></i>
      <i class="fa-brands fa-react" style="display: none"></i>
      <i class="fa-solid fa-n" style="display: none"></i>
      <i class="fa-solid fa-quote-right" style="display: none"></i>
    </div>

    <script src="/assets/js/blog.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>