<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <!-- <link rel="stylesheet" href="/assets/css/navbar.css" /> -->
    <link rel="stylesheet" href="/assets/css/blog.css" />
    <link rel="stylesheet" href="/assets/css/post-grid.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .active { color: orangered !important; font-weight: bold !important; }
    </style>
  </head>
  <body>
    <!-- NAV -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/Day 10/index.html">
          <img
            src="/assets/picture/logo-dumbways.png"
            style="width: 50px"
            alt="image here"
          />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link active" href="blog">Blog</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="testimonial">Testimonial</a>
            </li>
          </ul>

          {{#if user}}
            <h3 style="margin-right: 30px; color:orangered">Hello,
              {{user.name}}</h3>
            <a
              style="margin-right: 10px;"
              href="/logout"
              class="btn btn-outline-danger"
            >Logout</a>
          {{else}}
            <a
              style="margin-right: 10px;"
              href="/register"
              class="btn btn-warning"
            >Register</a>
            <a
              style="margin-right: 10px;"
              href="/login"
              class="btn btn-outline-warning"
            >Login</a>
          {{/if}}

          <a href="contact" class="btn btn-outline-dark">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- NAV -->

    {{#if messages.error}}
      <div class="alert alert-danger" role="alert">
        <h5>{{messages.error}}</h5>
      </div>
    {{/if}}
    {{#if messages.success}}
      <div class="alert alert-success" role="alert">
        <h5>{{messages.success}}</h5>
      </div>
    {{/if}}

    <!-- FORM -->
    <div class="form-container2">
      <br />
      <h1>Register</h1>
      <br />

      <form action="/register" method="post">
        <div class="blog-proname">
          <label for=""> Name </label>
          <input
            class="blog-input"
            id="pronameinput"
            placeholder="Enter email here..."
            type="text"
            name="name"
          />
        </div>

        <div class="blog-proname">
          <label for=""> Email </label>
          <input
            class="blog-input"
            id="pronameinput"
            placeholder="Enter email here..."
            type="email"
            name="email"
          />
        </div>

        <div class="blog-proname">
          <label for=""> Password </label>
          <input
            class="blog-input"
            id="pronameinput"
            placeholder="Enter password here..."
            type="password"
            name="password"
          />
        </div>

        <div class="submit-btn-div">
          <button type="submit">Submit</button>
        </div>
      </form>
    </div>
    <!-- FORM -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>